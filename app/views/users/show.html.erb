
<div class="flex flex-col items-center w-full">
<div class="flex bg-blue-300 mb-4 w-full p-2 gap-2 border-2 border-blue-400 transform hover:-translate-y-1 hover:-translate-x-1 transition-transform duration-200">
  <figure class="border border-black h-full">
    <%= image_tag @user.photo, class: 'w-32 h-32 object-fill' %></figure>
    <div class="flex justify-between items-center w-full cursor-pointer">
    <div class="text-4xl text-black">
      <%= @user.name %>
    </div>
    <div class="text-black self-end">
      Number of posts: <%= @user.posts_counter.nil? ? 0 : @user.posts_counter %>
    </div>
    </div >
</div>

<div class="flex w-full flex-col border-2 border-blue-400 mb-4 p-2 cursor-pointer transform hover:-translate-y-1 hover:-translate-x-1 transition-transform duration-200">
<h1 class="text-2xl font-bold mb-2">Bio</h1>
<p class=""><%= @user.bio %></p>
</div>

<% @user.recent_posts.each do |post| %>
  <%= link_to user_post_path(@user, post), class: 'flex flex-col mb-4 p-4 bg-blue-100 transform hover:-translate-y-1 hover:-translate-x-1 transition-transform duration-200 rounded w-full' do %>
    <div class="font-bold text-lg mb-2">
      <%= post.title %>
    </div>
    <div class="text-gray-900">
      <%= post.text %>
    </div>
    <p class="flex text-gray-500 mt-2 justify-end">
      Number of comments: <%= post.comments_counter || 0 %>, Number of likes: <%= post.likes_counter || 0 %> 
    </p>
  <% end %>
<% end %>

<%= link_to "See all posts", user_posts_path(@user), class: 'px-4 py-2 rounded font-bold bg-blue-500 text-white mb-4 hover:bg-blue-700' %>
</div>